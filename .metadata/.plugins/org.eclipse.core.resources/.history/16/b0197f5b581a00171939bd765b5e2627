		//Exercício 21 - Média de alunos por turma
		int alunos = 0;
		int soma = 0;
		int media = 0;
		boolean turma = false;
		
		System.out.println("Quantas turmas: ");
		int turmas = scan.nextInt();
		for(int i = 0; i < turmas; i++){
			while(turma==false){
				System.out.println("Digite a quantidade de alunos da " + (i+1) + "ª turma: ");
				alunos = scan.nextInt();
				if(alunos > 40){
					turma = false;
				}else{
					soma +=alunos;
					turma = true;
				}
			}
		}
		media = soma/turmas;
		System.out.println("Média por turma é " + media);

