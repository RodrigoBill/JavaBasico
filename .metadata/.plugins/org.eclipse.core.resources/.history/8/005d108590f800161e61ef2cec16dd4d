import java.util.Scanner;

public class ControlesDecisoesLoopsExerciciosIfSwitch {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		int num1;
		int num2;
		
		//Exercício 1 Imprimir o maior		
		System.out.println("Digite dois números: ");
		num1 = scan.nextInt();
		num2 = scan.nextInt();
		
		if(num1 > num2){
			System.out.println(num1 + " é maior.");
		}else if (num1 == num2){
			System.out.println(num1 + " é igual a " + num2);
		}else{
			System.out.println(num2 + " é maior.");
		}
		
		//Exercício 2 Mostrar se é positivo ou negativo
		System.out.println("Digite um número: ");
		num1 = scan.nextInt();
		if(num1 < 0){
			System.out.println(num1 + " é negativo.");
		}else{
			System.out.println(num1 + " é positivo.");
		}
		
		//Exercício 3 Saber se é masculino ou feminino
		System.out.println("Digite F para sexo feminino e M para masculino: ");
		String sexo = scan.next();
		switch (sexo) {
		case "F": System.out.println("Feminino");break;
		case "M": System.out.println("Masculino");break;

		default:
			System.out.println("Sexo inválido");
		}
	}

}
