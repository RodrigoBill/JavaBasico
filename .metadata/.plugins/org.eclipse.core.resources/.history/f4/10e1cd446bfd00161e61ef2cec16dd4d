		//Exercício 20 - 5 perguntas e definir o grau de escala no crime
		int somaResposta = 0;
		boolean simNao;
		
		System.out.println("1-Sim / 0-Não");
		System.out.print("Telefonou para a vítima? ");
		simNao = scan.nextBoolean();
		if (simNao == true) {
			somaResposta++;
			System.out.println("Sim");
		}		
		System.out.println("Esteve no local do crime? ");
		simNao = scan.nextBoolean();
		if (simNao == true) {
			somaResposta++;
			System.out.println("Sim");
		}
		System.out.println("Mora perto da vítima? ");
		simNao = scan.nextBoolean();
		if (simNao == true) {
			somaResposta++;
			System.out.println("Sim");
		}
		System.out.println("Devia para a vítima? ");
		simNao = scan.nextBoolean();
		if (simNao == true) {
			somaResposta++;
			System.out.println("Sim");
		}
		System.out.println("Já trabalhou coma vítima? ");
		simNao = scan.nextBoolean();
		if (simNao == true) {
			somaResposta++;
			System.out.println("Sim");
		}
		
		switch (somaResposta) {
		case 0:System.out.println("Inocente!");break;
		case 1:System.out.println("Inocente!");break;
		case 2:System.out.println("Suspeito!");break;
		case 3:
		case 4:System.out.println("Cúmplice!");break;
		case 5:System.out.println("Culpado!");break;

		default:System.out.println("Nada a declarar!");
			break;
