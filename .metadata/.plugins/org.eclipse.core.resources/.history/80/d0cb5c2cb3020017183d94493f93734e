package ControlesDecisoesLoopsExercícios;

import java.util.Scanner;

public class ExreciciosWhileFor {

	public static void main(String[] args) {


		int num1 = 0;
		int num2 = 0;
		int num3 = 0;
		Scanner scan = new Scanner(System.in);
		
		//Exrcício 1 - Pedir até que o valor numérico seja entre 0 e 10.
/*		System.out.print("Dê uma nota entre 0 e 10: ");
		num1 = scan.nextInt();
		while (num1 < 0 || num1 > 10) {
			System.out.print("Dê uma nota entre 0 e 10 válida: ");
			num1 = scan.nextInt();
		}
		
		System.out.println("O número " + num1 + " é válido");
*/
		
		//Exercício 2 - Ler usuário e senha. Senha não pode ser igual ao usuário
		System.out.print("Digite seu usuário: ");
		String usuario = scan.nextLine();
		System.out.print("Digite a senha: ");
		String senha = scan.nextLine();
		
		while (usuario == senha){
			System.out.println("Usuário não pode ser igual a senha.");
			System.out.print("Digite seu usuário novamente: ");
			usuario = scan.next();
			System.out.println("Senha não pode ser igual ao usuário: ");
			System.out.print("Digite a senha novamente: ");
			senha = scan.next();
		}
		
		System.out.println("Usuário e senha válidos!");
	}

}
