		//Exrcício 16 Equação do 2º grau
		System.out.println("Digite os valores de a,b e c para a equação:");
		System.out.println("a = ");
		double a = scan.nextDouble();
		double b;
		double c;
		double delta;
		double raiz1;
		double raiz2;
		
		if(a != 0){
			System.out.println("b = ");
			b = scan.nextDouble();
			System.out.println("c = ");
			c = scan.nextDouble();
			
			delta = (b*b)-4*a*c;
			
			if( delta >= 0){
				
				if(delta == 0){
					System.out.println("Raiz é " + delta);
				}else if(delta != 0){
					raiz1 = - b + Math.sqrt(delta)/2*a;
					raiz2 = - b + Math.sqrt(delta)/2*a;
				}
				
			}else{
				System.out.println("Equação não possuí raiz pois o Delta é negativo.");
			}
			
		}else{
			System.out.println("Não é uma equação do 2º Grau.");
		}
		
