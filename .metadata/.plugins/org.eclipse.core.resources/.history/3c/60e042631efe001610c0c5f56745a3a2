		//Exercício 23 - 
		double fileDuplo = 5.90;
		double alcatra = 6.90;
		double picanha = 7.90;
		
		double total = 0;
		double porcentagem = 10;
		double valorCarne = 0;
		double desconto = 0;
		
		boolean cartao = false;
		
