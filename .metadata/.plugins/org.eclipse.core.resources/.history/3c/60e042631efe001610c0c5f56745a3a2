		String tipoDeCarne = scan.next();
		System.out.println("Quantos Kilos: ");
		double qtdKg = scan.nextDouble();
		
		if (tipoDeCarne.length() != 1) {
			System.out.println("Não há esse tipo de carne.");
		} else if(qtdKg < 0){
			System.out.println("Quantidade inválida.");
		}else {
			
			switch (tipoDeCarne) {
			case "A":
			case "a":
				
				total = qtdKg * alcatra;
				tipoDeCarne = "Alcátra";
				if(qtdKg > 5){
					alcatra = 6.80;
					total = qtdKg * alcatra;
				}
				break;
				
			case "F":
			case "f":
				
				total = qtdKg * fileDuplo;
				tipoDeCarne = "Filé Duplo";
				if(qtdKg > 5){
					alcatra = 5.80;
					total = qtdKg * fileDuplo;
				}
				break;
				
			case "P":
			case "p":
				
				total = qtdKg * picanha;
				tipoDeCarne = "Picanha";
				if(qtdKg > 5){
					alcatra = 7.80;
					total = qtdKg * alcatra;
				}
				break;

			default:
				break;
			}
			
		}
		
		}

}
